<?xml version="1.0" encoding="utf-8" ?>
<component
  extends="Group"
  initialFocus="play_button"
  name="details_screen"
  >
  <interface>
    <field id="content"
      type="node"
      alwaysnotify="true"
      onChange="onContentChange" />
    <field id="play_button_pressed"
      type="integer"
      alwaysnotify="true"
      alias="play_button.buttonSelected" />
    <field
      id="config"
      type="assocArray"
      />
  </interface>
  <children>
    <Poster
      height="560"
      id="image"
      translation="[100,50]"
      width="340"
      />
    <LayoutGroup
      horizAlignment="left"
      layoutDirection="vert"
      translation="[500, 60]"
      vertAlignment="top"
      >
      <Label
        color="0xFFFFFF"
        height="50"
        font="font:LargeBoldSystemFont"
        id="title"
        text="title"
        translation="[0,0]"
        width="700"
        wrap="true"
        />
      <Label
        color="0xFFFFFF"
        height="50"
        font="font:SmallSystemFont"
        id="detail_title"
        text="title"
        translation="[0,0]"
        width="700"
        wrap="true"
        />
      <Label
        color="0xFFFFFF"
        font="font:SmallSystemFont"
        height="305"
        id="detail_info"
        text="detail info"
        translation="[0,0]"
        width="700"
        wrap="true"
        />
      <Label
        color="0xFFFFFF"
        height="75"
        font="font:MediumSystemFont"
        id="additional_info"
        text="Additional"
        translation="[0,0]"
        width="700"
        wrap="true"
        />
      <Button
        id="play_button"
        text="Play"
        translation="[500,400]"
        />
    </LayoutGroup>
  </children>
  <script type="text/brightscript" uri="pkg:/components/screens/details_screen.brs" />
</component>